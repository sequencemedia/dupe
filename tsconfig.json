{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ESNext",
    "allowJs": true,
    "checkJs": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "strict": true,
    "isolatedModules": true,
    "noImplicitAny": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": true,
    "strictNullChecks": true,
    "baseUrl": "."
  }
}
